<h1> Livros </h1>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Ano</th>
            <th>Escritor</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.nome %></td>
                <td><%= book.ano %></td>
                <td><%= book.escritor %></td>
                <td><%= link_to 'Mostrar', book %></td>
                <td><%= link_to 'Editar', edit_book_path(book) %></td>
                <td><%= link_to 'Apagar', book, method: :delete, data: { confirm: 'Tem certeza disso?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'Novo livro', new_book_path %>